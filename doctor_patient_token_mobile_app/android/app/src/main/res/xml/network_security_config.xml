<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust user-added CA certificates for debug builds -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Allow connection to your API domain -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">ikrammedicalcenter.online</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
